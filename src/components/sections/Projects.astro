---
import GitHub from "../../icons/GitHub.astro"
import Section from "../Section.astro"
const { projects, title } = Astro.props;
---

<Section title={title}>
  <ul class="grid grid-cols-2 ml-0 mr-0 md:grid-cols-2 gap-4 -mx-4 border-2 border-black">
    {
      projects.map(
        ({ url, description, highlights, name, isActive, github }) => {
          return (
            <li>
              <article class="gap-4 flex flex-col h-full md:p-4 p-2 rounded-lg shadow-slate-100">
                <header class="flex-1">
                  <h3 class="mb-2">
                    <a class="hover:underline" href={url} target="_blank" title={`Ver el proyecto ${name}`}>
                      {name}
                    </a>
                    {isActive && <span>•</span>}
                    {github && (
                      <a
                        class="github-code-link"
                        href={github}
                        target="_blank"
                        title={`Ver código fuente del proyecto ${name}`}
                      >
                       <GitHub />
                      </a>
                    )}
                  </h3>
                  <p class="mb-2 text-xs leading-5">{description}</p>
                </header>
                <footer class="flex gap-1 text-xs">
                  {highlights.map((highlight) => {
                    return <span class="bg-gray-200 text-[9.4px] text-gray-600 font-semibold rounded-md px-2 py-0.5 text-xs">{highlight}</span>
                  })}
                </footer>
              </article>
            </li>
          )
        }
      )
    }
  </ul>
</Section>

<style>

  article {
    border: 1px solid #e5e7eb;
  }

  article h3 span {
    color: rgb(0, 188, 47);
    animation-name: flicker;
    animation-duration: 3s;
    animation-timing-function: ease-in;
    animation-iteration-count: infinite;
  }


  @keyframes flicker {
    0% {
      opacity: 1;
    }
    50% {
      opacity: 0.25;
    }
    100% {
      opacity: 1;
    }
  }

  @media (width <= 700px) {
    article {
      border: 1px solid #e5e7eb;
    }
  }

</style>
